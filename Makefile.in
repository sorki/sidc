DESTDIR =
prefix = @prefix@
exec_prefix = @exec_prefix@
topdir = @srcdir@
srcdir = @srcdir@

bindir = $(DESTDIR)@bindir@
mandir = $(DESTDIR)@mandir@/man1

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
DEFS = @DEFS@
LIBS = @LIBS@

$(topdir)/sidc: $(srcdir)/sidc.c
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -o $@ $< $(LIBS)

install: $(topdir)/sidc
	install sidc -s $(bindir)

uninstall:
	rm -f $(bindir)/sidc

clean:
	rm -f $(topdir)/sidc

distclean: clean
	rm -f $(topdir)/Makefile \
              $(topdir)/config.status \
              $(topdir)/config.log \
              $(topdir)/config.h \
              $(topdir)/config.cache

